<div class="large-12">
  <h1>New Phone</h1>
  <div class="panel">
    <%= form_for @phone do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :phone_manufacturer_id %>
      <%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name) %>

      <%= f.label :year %>
      <%= f.number_field :year %>

      <%= f.label :battery_life %>
      <%= f.text_field :battery_life %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Add new phone" %>
    <%- end -%>
  </div>
</div>
